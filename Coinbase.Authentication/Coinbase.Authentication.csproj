<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Description>OAuth Extensions for Coinbase</Description>
    <PackageProjectUrl>https://github.com/granthoff1107/Coinbase.Authentication</PackageProjectUrl>
    <PackageTags>Coinbase OAuth .Net-Core</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Coinbase\" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Authentication" Version="2.1.0" />
    <PackageReference Include="Microsoft.AspNetCore.Authentication.OAuth" Version="2.1.0" />
  </ItemGroup>

</Project>
